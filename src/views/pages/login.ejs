<%- include('../partials/header', { pageTitle: 'Login | PolyCOOP' }) %>

    <main>
        <h2>Logowanie</h2>

        <% if(errors && errors.length > 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <form action="/login" method="POST">
                <label for="username">username:</label>
                <input type="text" id="username" name="username" value="<%= values.username %>" ><br>
                <label for="password">password:</label>
                <input type="password" id="password" name="password" value="<%= values.password %>" ><br>
            <button type="submit">Zaloguj</button>
        </form>
    </main>

    <%- include('../partials/footer') %>
